<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="7dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/background_shape_add">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginStart="7sp"
                android:layout_marginEnd="7sp"
                android:layout_marginTop="7sp"
                android:id="@+id/buyer_product_image"
                android:background="@drawable/ic_photo_camera_black_24dp"
              />

            <TextView
                android:id="@+id/buyer_price_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/buyer_product_image"
                android:layout_marginStart="16dp"
                android:text="data"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/buyer_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/buyer_price_data"
                android:layout_marginStart="16dp"
                android:text="data"
                android:textColor="#000"
                android:textSize="13sp" />
            </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>