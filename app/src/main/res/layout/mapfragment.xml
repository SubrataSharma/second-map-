<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">
    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MapsActivity" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/background_search_shape"
        android:layout_marginTop="10dp"
        android:gravity="top"
        android:hint="Location"
        android:id="@+id/get_location"/>

    <Button
        android:id="@+id/get_location_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="277dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/ic_search_black_24dp" />
    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="80dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginTop="10dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="15dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/search_button_car"
        app:civ_border_width="4dp"
        app:civ_border_color="@color/colorPrimary"
        android:background="@drawable/background_circle"
        android:src="@drawable/car"
        />
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginTop="10dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="15dp"
        app:civ_border_width="4dp"
        app:civ_border_color="@color/colorPrimary"
        android:background="@drawable/background_circle"
        android:layout_alignParentBottom="true"
        android:id="@+id/search_button_truck"
        android:layout_toRightOf="@+id/search_button_car"
        android:src="@drawable/truck"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginTop="10dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="15dp"
        app:civ_border_width="4dp"
        app:civ_border_color="@color/colorPrimary"
        android:background="@drawable/background_circle"
        android:layout_alignParentBottom="true"
        android:id="@+id/search_button_suv"
        android:layout_toRightOf="@+id/search_button_truck"
        android:src="@drawable/suv"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginTop="10dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="15dp"
        app:civ_border_width="4dp"
        app:civ_border_color="@color/colorPrimary"
        android:background="@drawable/background_circle"
        android:layout_alignParentBottom="true"
        android:id="@+id/search_button_motorcycle"
        android:layout_toRightOf="@+id/search_button_suv"
        android:src="@drawable/motorcycle"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginTop="10dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="15dp"
        app:civ_border_width="4dp"
        app:civ_border_color="@color/colorPrimary"
        android:background="@drawable/background_circle"
        android:layout_alignParentBottom="true"
        android:id="@+id/search_button_tractor"
        android:layout_toRightOf="@+id/search_button_motorcycle"
        android:src="@drawable/tractor"/>
    </RelativeLayout>
    </HorizontalScrollView>

</RelativeLayout>