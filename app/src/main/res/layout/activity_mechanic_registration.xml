<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MechanicRegistrationActivity">
    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map_registration"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MapsActivity"
        />
    <EditText
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:background="@drawable/background_search_shape"
        android:layout_marginTop="10dp"
        android:gravity="top"
        android:layout_centerHorizontal="true"
        android:hint="Location"
        android:id="@+id/get_location_registration"/>

    <ImageButton
        android:id="@+id/get_location_button_registration"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="327dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/ic_search_black_24dp" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


    <Button
        android:id="@+id/previous_button"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="30dp"
        android:textStyle="italic"
        android:textSize="19dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/background_shape"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:text="←back    "
        android:onClick="previousButton"
        />

        <Button
            android:id="@+id/submit_button"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:textStyle="italic"
            android:textSize="19dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/background_shape"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:text="  Next→"
            android:onClick="submitButton"
            android:layout_toRightOf="@+id/previous_button"
            />




        </RelativeLayout>
    </ScrollView>





</RelativeLayout>