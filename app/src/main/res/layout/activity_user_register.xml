<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserRegisterActivity"
    android:background="@color/colorPrimary">

    <ImageView
        android:layout_width="270dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/icon"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/background_edittext_shape"
        android:layout_marginTop="190dp"
        android:gravity="top"
        android:layout_centerHorizontal="true"
        android:hint="User Name"
        android:id="@+id/user_registration_name"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/background_edittext_shape"
        android:layout_marginTop="10dp"
        android:gravity="top"
        android:layout_centerHorizontal="true"
        android:hint="Email"
        android:layout_below="@+id/user_registration_name"
        android:id="@+id/user_registration_email"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/background_edittext_shape"
        android:layout_marginTop="10dp"
        android:gravity="top"
        android:layout_centerHorizontal="true"
        android:hint="Password"
        android:layout_below="@+id/user_registration_email"
        android:id="@+id/user_registration_pass"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/background_edittext_shape"
        android:layout_marginTop="10dp"
        android:gravity="top"
        android:layout_centerHorizontal="true"
        android:hint="Confirm Password"
        android:layout_below="@+id/user_registration_pass"
        android:id="@+id/user_registration_con_pass"/>

    <Button
        android:id="@+id/user_register_submit_button"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_below="@+id/user_registration_con_pass"
        android:background="@drawable/background_shape"
        android:textColor="@color/white"
        android:text="SUBMIT"
        android:onClick="userRegisterSubmitButton"/>

</RelativeLayout>